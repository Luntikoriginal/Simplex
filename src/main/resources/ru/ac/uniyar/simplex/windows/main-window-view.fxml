<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml" alignment="CENTER" spacing="20.0"
      fx:controller="ru.ac.uniyar.simplex.controllers.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Menu"/>
    <Label fx:id="welcomeText"/>
    <Button text="Ручной ввод задачи" minWidth="150" onAction="#onHandButtonClick"/>
    <Button text="Взять задачу и файла" minWidth="150" onAction="#onFileButtonClick"/>
    <Button text="Справка" minWidth="150" onAction="#onSupportButtonClick"/>
</VBox>
